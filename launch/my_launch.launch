<launch>
  <!-- CPP -->
  <node name="publisher_cpp" pkg="ros_basic_pkg" type="publisher_cpp" output="screen" />  
  <node name="subscriber_cpp" pkg="ros_basic_pkg" type="subscriber_cpp" output="screen" />
  <!-- server -->
  <node name="service_server_node_cpp" pkg="ros_basic_pkg" type="service_server_node_cpp" output="screen" />  
  <node name="action_server_node_cpp" pkg="beginner_tutorials" type="action_server_node_cpp" output ="screen"/>

  <!-- python -->
  <node name="publisher_py_node" pkg="ros_basic_pkg" type="py_publisher.py" output="screen" />
  <node name="subscriber_py_node" pkg="ros_basic_pkg" type="py_subscriber.py" output="screen" />
  <!-- server -->
  <node name="service_server_node_py" pkg="ros_basic_pkg" type="py_service_server.py" output ="screen"/>
  <node name="action_server_node_py" pkg="beginner_tutorials" type="py_action_server.py" output ="screen"/>
   
</launch>
